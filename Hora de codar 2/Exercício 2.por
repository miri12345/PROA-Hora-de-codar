programa {
  funcao inicio() {

    inteiro n1

    escreva("Digite um número ")
    leia(n1)

    se(n1 > 0){
      escreva("Seu número (", n1, ") é positivo! ")
    }

    se(n1 < 0){

       escreva("Seu número (", n1, ") é negativo! ")
    }

    se(n1 == 0){

       escreva("Seu número (", n1, ") é zero! ")
    }

  }
}

   
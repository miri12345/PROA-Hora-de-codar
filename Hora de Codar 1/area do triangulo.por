programa {
  funcao inicio() {
    // area do triangulo

     real base
     real altura
     real area

     escreva("Qual é a base do triangulo? ")
     leia(base)
     escreva("Qual é a altura do triangulo? ")
     leia(altura)

     area = base * altura / 2

     escreva("A área do triângulo é ", area)


  }
}

programa {
  funcao inicio() {
    
    // area do losango

    real dmaior
    real dmenor
    real area

    escreva("Qual é o valor do diagonal maior? ")
    leia(dmaior)
    escreva("Qual é o valor do diagonal menor?" )
    leia(dmenor)

    area = dmaior * dmenor / 2

    escreva("O valor da área do losango é ", area)

    
  }
}
